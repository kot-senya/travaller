<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="btn_main">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="btn_usually">
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="fontFamily">@font/ibmpilexsans_bold</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tv_city_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/ibmpilexsans_bold</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">25dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:foregroundTintMode">screen</item>
    </style>

    <style name="tv_city_region" parent="tv_city_name">
        <item name="android:textSize">14dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <style name="tv_usually" parent="tv_city_region">
        <item name="fontFamily">@font/ibmpilexsans_regular</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <style name="et_usually">
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:background">@drawable/background_edittext</item>
        <item name="fontFamily">@font/ibmpilexsans_regular</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/blue</item>
    </style>


</resources>